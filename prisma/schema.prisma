generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"] // full text search in postgres to be able to search for jobs later
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Job {
  id               Int      @id @default(autoincrement())
  slug             String   @unique
  title            String
  type             String
  locationType     String
  location         String? // remote job dont require location
  //description      String? // postgres
  description      String?  @db.Text // Change for mysql, mysql has a default limit of 255
  salary           Int
  companyName      String
  applicationEmail String?
  applicationUrl   String?
  companyLogoUrl   String?
  approved         Boolean  @default(false) // admin must first approve this before job is posted
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@fulltext([title, companyName, type, locationType, location]) // whichever we want to fulltext search
  @@map("jobs")
}

